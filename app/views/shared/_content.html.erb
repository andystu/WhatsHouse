<html>
	<head>
		<script type="text/javascript"
				var API_KEY = "AIzaSyC0TefahOFqFl5g7PqXaH6a1qaEVwezRXM"
      			src="https://maps.googleapis.com/maps/api/js?key="+API_KEY+"&sensor=FALSE">
    	</script>
		<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
		<script src="https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.1.2/src/markerclusterer.js" type="text/javascript"></script>
		<!-- <script src="https://b77ckups.googlecode.com/files/jquery-ui-1.8.9.custom.min.js" type="text/javascript"></script> -->
		<%= javascript_include_tag "show" %>
	</head>
	<body>
		<div id="map_canvas" style="width:100%; height:100%">
		</div>
		<div class="ui response cell grid">
			<div class="column">
				<div class="ui inverted red pointing response menu">
					<a class="item" data-tab="Information">房屋資訊</a>
					<% if current_page?("buy") || current_page?("rent") %>
						<a class="item" data-tab="Show_Img">相片</a>
					<% end %>
					<a class="item" data-tab="Around">周邊</a>
					<a class="item" data-tab="Comment">討論</a>
					<% if current_page?("buy") || current_page?("rent") %>
						<a class="item" data-tab="Advanced_Search">進階搜尋</a>
					<% end %>
				</div>
				<div class="launch button"><i class='big red sort icon'></i></div>
					<div id="area">
							<div class="ui tab segment" id="information" data-tab="Information">
									<div class="message">請點選地圖上的房屋或搜尋</div>
							</div>
						<div class="ui tab segment" id="show_img slider1_container" data-tab="Show_Img">
							<div id="slider1_container">
									<div class="message">請點選地圖上的房屋或搜尋</div>
							</div>
						</div>
						<div class="ui tab segment" id="around" data-tab="Around">
							<div class="ui form">
								<div class="field">
									<div class="grouped inline fields" id="around_services">
										<div class="field">
											<div class="ui slider checkbox">
					  							<input name="stores" type="checkbox">
					  							<label id="7-11">7-11</label>
											</div>	
										</div>
										<div class="field">
											<div class="ui slider checkbox">
												<input name="tainan_schools" type="checkbox">
												<label id="學校">學校</label>
											</div>	
										</div>	
										<div class="field">
											<div class="ui slider checkbox">
												<input name="dinings" type="checkbox">
												<label id="餐廳">餐廳</label>
											</div>	
										</div>	
										<div class="field">
											<div class="ui slider checkbox">
												<input name="stations" type="checkbox">
												<label id="火車站">火車站</label>
											</div>	
										</div>
										<div class="field">
											<div class="ui slider checkbox">
												<input name="hospitals" type="checkbox">
												<label id="診所醫院">診所醫院</label>
											</div>	
										</div>
										<div class="field">
											<div class="ui slider checkbox">
												<input name="police_stations" type="checkbox">
												<label id="Police">Police</label>
											</div>	
										</div>	
										<div class="field">
											<div class="ui slider checkbox">
												<input name="tainan_markets" type="checkbox">
												<label id="Markets">Markets</label>
											</div>
										</div>
									</div>
								</div>	
							</div>	
						</div>
						<div class="comments-area ui tab segment" id="comments" data-tab="Comment">
								<div id="disqus_thread">
									<div class="message">請點選地圖上的房屋或搜尋</div>
								</div>
						</div>
						<div class="ui tab segment" id="advanced_search" data-tab="Advanced_Search">
							<div class="ui form">	
							<% if current_page?("rent") %>
	 							<%= render :partial => "shared/rent_search_form" %>	
							<% end %>	
							<% if current_page?("buy") %>
	 							<%= render :partial => "shared/buy_search_form" %>	
							<% end %>
							</div>
							<div id="search_show" class="" style="display:none">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% if current_page?("buy") || current_page?("rent") %>
				<div class="house_cart ui relaxed divided list"> 
					<div class="cart item">
						<ul class="house_list">
						</ul>
					</div>
				</div>
		<% end %>
	</body>
	<script type="text/javascript">
			var disqus_shortname = 'whatshouse';
			var disqus_identifier = 'whatshouse';
				(function() {
						var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
						dsq.id = disqus_identifier;
						dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
						(document.getElementsByTagName('head')[0] || 
								document.getElementsByTagName('body')[0]).appendChild(dsq);
			})();
	
	</script>
</html>
