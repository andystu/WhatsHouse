<% provide(:title, 'Sign up') %>

<div class="ui form signup segment">
  <%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object%>
  <div class="field">
	<%= f.label :username %>
	<div class="ui left labeled icon input">
      <%= f.text_field :name %>
      <i class="user icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
	  </div>
	</div>
  </div> 
  <div class="field">
    <%= f.label :email %>
	<div class="ui left labeled icon input">
	  <%= f.text_field :email %>
	  <i class="mail icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
	  </div>
	</div>
  </div> 

  <div class="field">
    <%= f.label :password %>
	<div class="ui left labeled icon input">
      <%= f.password_field :password %>
	  <i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
	  </div>
	</div>
  </div> 

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %>
	<div class="ui left labeled icon input">
      <%= f.password_field :password_confirmation %>
	  <i class="lock icon"></i>
      <div class="ui corner label">
        <i class="icon asterisk"></i>
	  </div>
	</div>
  </div>
  <%= f.submit "Sign Up", class:"ui red button" %>
</div>
<% end %>
